@model helpDesk.Entity.QA

@{
    ViewBag.Title = "Асуулт оруулах";
}

<h2>Асуулт оруулах</h2>


@using (Html.BeginForm("Create", "QA", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>QA</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.question, "Асуулт асуух", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.question, new { style="height:200px;width:100%"})
                @Html.ValidationMessageFor(model => model.question)
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.question_file, "Файл хавсаргах", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="question_file" class="form-control" id="question_file" />
                <label>10mb-с доош зураг, pdf, doc, docx өргөтгөлтэй файлыг хавсаргаж болно.</label>
                @Html.ValidationMessageFor(model => model.question_file)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.org_id, "Асуулт асуух байгууллага",new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownList("org_id", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Асуулт оруулах" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Жагсаалтруу буцах", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
