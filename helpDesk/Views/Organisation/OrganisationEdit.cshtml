@model helpDesk.Entity.Organisation

@{
    ViewBag.Title = "Байгууллага засах";
}

<h2>Байгууллага засах</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.org_name, "Байгууллагын нэр", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.org_name, new { @class="form-control"})
                @Html.ValidationMessageFor(model => model.org_name)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Хадгалах" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Байгууллагын жагсаалтруу буцах", "Organisation")
</div>
